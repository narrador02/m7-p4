<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_tracking_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tracking_title"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/md_theme_primary"
            android:layout_marginBottom="16dp" />

        <!-- Gráfico de progreso -->
        <ImageView
            android:id="@+id/iv_progress_chart"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_chart_placeholder"
            android:contentDescription="@string/progress_chart"
            android:layout_marginBottom="24dp" />

        <!-- Resumen de datos -->
        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary_placeholder"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="24dp" />

        <!-- Botón para actualizar datos -->
        <Button
            android:id="@+id/btn_update_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_data"
            android:backgroundTint="@color/md_theme_primary"
            android:textColor="@android:color/white"
            android:padding="12dp" />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/footer_fragment"
            android:name="com.example.m07_p4.FooterFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </LinearLayout>
</ScrollView>
